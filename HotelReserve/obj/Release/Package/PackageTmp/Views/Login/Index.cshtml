@model HotelReserve.Models.LoginViewModel
@{
    Layout = null;
}
<link type="text/css" href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
<style>
    html {
        width: 100%;
        height: 100%;
    }

    .box-one {
        width: 320px;
        height: 320px;
        border: 1px solid #797979;
        position: absolute;
        left: 38%;
        top: 20%;
        background-color: rgba(255,255,255,0.5);
        border-radius: 10px;
    }

    .title {
        height: 80px;
        text-align: center;
        font-size: 3em;
        font-weight: 700;
        font-family: 楷体;
        margin-top: 20px;
    }

    .register {
        position: absolute;
        bottom: 15px;
        height: 20px;
        width: 238px;
        margin-left: 40px;
        text-align: right;
    }

    .box-two {
        margin-left: 40px;
        margin-bottom: 30px;
        margin-right: 40px;
        border-radius: 30px;
    }

    .btn-one {
        margin-left: 40px;
        margin-right: 40px;
        width: 238px;
        font-size: 16px;
        font-family: 楷体;
        border-radius: 10px;
    }

    .body_blank {
        background-image: url(/Content/image/bg_2.jpg);
        background-size: cover;
        background-repeat: no-repeat;
    }

    .ys-one {
        height: 38px;
        border-radius: 10px;
    }
    span {
        color: #5bc0de;
    }
</style>
<body class="body_blank">
    <div class="box-one">
        <div class="title">海石三酒店</div>
@using (Html.BeginForm("Index", "Login", FormMethod.Post))//提交到Login控制器下的Login方法
{
        <div class="form-group box-two">
            <div class="input-group">
                <div class="input-group-addon ys-one"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></div>
                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control ys-one", @placeholder = "请输入用户名" })
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group box-two">
            <div class="input-group">
                <div class="input-group-addon ys-one"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></div>
                @Html.PasswordFor(x => x.PassWord, new { @class = "form-control ys-one", @placeholder = "请输入密码" })
                @Html.ValidationMessageFor(m => m.PassWord, "", new { @class = "text-danger" })
            </div>
        </div>
        <button type="submit" class="btn-one btn btn-info">登陆</button>
}
        <div class="register"><a href="@Url.Action("Index","Register")">注册账号</a></div>
    </div>
</body>