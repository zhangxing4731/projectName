@{
    ViewBag.title = "预定酒店";
}
<link href="~/Scripts/bootstrap-datetimepicker-master/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-datetimepicker-master/js/bootstrap-datetimepicker.min.js"></script>  
<style>  
    .reserve-query {
        position: absolute;
        top: 30px;
        left: 20px;
        right: 20px;
        height: 60px;      
    }

    .reserve-table {
        position: absolute;
        top: 92px;
        left: 20px;
        right: 20px;
        bottom: 5px;
        border: 1px solid #797979;
    }

    select.form-control {
        width: 200px;
        margin-top: 13px;
        margin-left:2px;
    }

    .btn-query {
        position: absolute;
        margin-left: 204px;
        margin-top: -50px;
    }
    .ReserveClass {

    }
    #addrooma {
        position: absolute;
        margin-left: 264px;
        margin-top: -50px;
    }
    #ModelBody {
        height:400px;
    }
</style>
<form id="searchRoom">
    <div id="searchId" class="reserve-query">
        <div class="form-group">
            <select id="select" class="form-control">
                <option value="请选择房间类型">请选择房间类型</option>
                <option value="单人间">单人间</option>
                <option value="双人间">双人间</option>
                <option value="标准间">标准间</option>
                <option value="豪华间">豪华间</option>
                <option value="套间">套间</option>
            </select>
        </div>
        <button id="ReserveBtn" type="button" class="btn btn-info btn-query" onclick="SearchReserve()" value="/Reserve/SrarchRoom">查询</button>
        <button id="addrooma" type="button" class="btn btn-info" onclick="refb()" value="/Reserve/DtaReserve"><i class="fa fa-refresh" aria-hidden="true"></i></button>
    </div>
</form>
<div id="div_person_data" class="reserve-table">
    <iframe style="overflow: hidden;width:100%;height:100%;border:0" id="Reserve" src="/Reserve/DtaReserve"></iframe>
</div>
<!-- 全局模态框（Modal） -->
<div style="position:absolute;top:10px;" class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="ModelTitile">
                    这里是模态框的头部
                </h4>
            </div>
            <div class="modal-body" id="ModelBody">
                <iframe style="overflow: hidden;width:100%;height:100%;border:0" id="ModelIframe" src="/Home/Date"></iframe>
            </div>           
        </div><!-- /.modal-content -->
    </div><!-- /.modal -->
</div>
<!-- 模态框（Modal） -->
<!-- 配置模态框（Modal）开始 -->
<script>

    function showModel(Title, obj) {

        var Value = $(obj).attr("value");

        $("#ModelTitile").html(Title)                //配置模态框的头部

        $("#ModelIframe").attr("src", Value)         //配置模态框的body

        $('#myModal').modal({
            keyboard: false,                         //按下 escape 键时关闭模态框，设置为 false 时则按键无效。
            backdrop: "static",                      //点击模态框外部 模态框不关闭

            show: true                               //打开 模态框
        })
    }
</script>
<!-- 模态框（Modal）结束 -->
<script>   
    function SearchReserve()
    {
        var RoomType = $('#select').val();
        if (RoomType != "请选择房间类型") {            
                var val = $("#ReserveBtn").attr("value");
                $("#Reserve").attr("src", val)           
            $.ajax
                ({
                    type: "POST",
                    url: "/Reserve/Srarch",
                    async: true,
                    data: { RoomType: RoomType },
                });
        }
        else {
            layer.alert('请选择查询内容', { icon: 2, skin: 'layer-ext-moon' });
        }       
    }
    function refb() {
        var val = $("#addrooma").attr("value");
        $("#Reserve").attr("src", val)      
    }
</script>
